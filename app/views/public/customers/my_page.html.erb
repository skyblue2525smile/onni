<div class="container">
  <div class = "p-3 text-black">
    <span class = "pr-3 pl-3 h4"><b>マイページ</b></span>
  </div>

  <h5 style="display: inline-block"><b>登録情報</b></h5>
  <%= link_to "内容を編集する", edit_customer_registration_path, class: "m-2 btn btn-success mr-2 ml-2" %>


  <div class="col-md-8">
  <table class="table table-bordered">
    <tbody>
      <thead>
      <tr>
        <th bgcolor="lemonchiffon">氏名</th>
        <td><%= @customer.full_name %></td>
      </tr>
      <tr>
        <th bgcolor="lemonchiffon">カナ</th>
        <td><%= @customer.full_name_kana %></td>
      </tr>
      <tr>
        <th bgcolor="lemonchiffon">郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th bgcolor="lemonchiffon">住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th bgcolor="lemonchiffon">電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th bgcolor="lemonchiffon">メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
      </thead>
    </tbody>
  </table>
  </div>

  <div class="pb-1">
    <h5 style="display: inline-block"><b>配送先</b></h5> <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary ml-5" %>
  </div>
  </br>
  <div class="pt-1">
    <h5 style="display: inline-block"><b>注文履歴</b></h5>　<%= link_to "一覧を見る", orders_path, class: "btn btn-primary ml-3" %>
  </div>

</div>