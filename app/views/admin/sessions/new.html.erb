<div class="container">
  <h2>管理者ログインページ</h2>

  <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true) do |f| %>
  <!--()を付けている理由：追記した他のコードの影響を受けて、エラーが発生するリスクを回避するため-->

    <div class="field d-flex justify-content-center">
      <span class="p-1">
        <%= f.label :メールアドレス %>
      </span>
      <span class="p-1">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", size:40 %>
      </span>
    </div>

    <div class="field d-flex justify-content-center">
      <span class="p-1">
        <%= f.label :パスワード %>
      </span>
      <span class="p-1">
        <%= f.password_field :password, autocomplete: "current-password", size:40 %>
      </span>
    </div>

    <!--< if devise_mapping.rememberable? %>-->
    <!--  <div class="field">-->
    <!--    %= f.check_box :remember_me %>-->
    <!--    %= f.label :remember_me %>-->
    <!--  </div>-->
    <!--% end %>-->

    <div class="d-flex justify-content-center m-3">
      <%= f.submit "管理者ログイン", class:"btn btn-info" %>
    </div>
  <% end %>

  <%= render "admin/shared/links" %>

</div>