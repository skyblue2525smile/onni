<div class="container">
  <div class="row">
    <div class="col-md-5">
      <div class = "p-3 text-black">
        <span class = "bg-light pr-3 pl-3 h5"><%= @customer.full_name %>さんの注文履歴</span>
      </div>
    </div>
  </div>

  <div class="row">
    <table class="table table-bordered">
      <thead class="thead-light">
        <tr>
          <th>購入日時</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>

      <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= link_to (l order.created_at), admin_customer_order_path(order.customer.id, order) %></td>
          <td><%= order.order_details.sum(:amount) %></td>
          <td><%= order.order_status_i18n %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <%= paginate @orders %>

  </div>
</div>